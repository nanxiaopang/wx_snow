.echarts_box{
  width: 100%;
  height: 300rpx;
  display: flex;
  margin-top: 8rpx;
}
.station_info{
  width: 150rpx;
  background-color: #eaeaea;
  background-color: white;
  margin-right: 2rpx;
  
  display: flex;
  flex-direction: column; /* 子元素横向排列 */
  justify-content: center; /* 相对父元素水平居中 */
  align-items: center;
}
.station_info_sort{
  font-size: 14px;
}
.station_info_id{
  font-size: 12px;
  color: #999;
}
.station_info_name{
  font-size: 12px;
  position: relative;
  margin: 10rpx 0 ;
}
.station_info_value{
  width: 80%;
  height: 16px;
  line-height: 16px;
  position: relative;
  overflow: hidden;
  border-radius: 3px;
}
.station_info_value_{
  height: 100%;
  position: absolute;
  z-index: 1;
  background-color: #d4d4d4;
}
.station_info_value_p{
  width: 100%;
  font-size: 12px;
  position: absolute;
  z-index: 2;
  text-align: center;
  color: white;
}





.mychart-dom-line{
  flex: 1;
  background-color: white;
}
